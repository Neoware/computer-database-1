  <!-- Full Java Configuration possible using WebApplicationInitializer interface
  	(instead of the following) -->
    
  <!-- Spring MVC redirect all incoming request to controllers defined in the contextConfigLocation -->
    
	<servlet>
	    <servlet-name>trackerServlet</servlet-name>
	    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	    <!-- Redirect Web request in Spring MVC dispatcher -->
	    <init-param>
	        <param-name>contextClass</param-name>
	        <param-value>
	            org.springframework.web.context.support.AnnotationConfigWebApplicationContext
	        </param-value>
	    </init-param>
	    <!-- Allow Spring MVC Controllers to use Spring context -->
	    <init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>com.excilys.spring.AppConfig</param-value>
	    </init-param>
	</servlet>
	 
	<servlet-mapping>
	    <servlet-name>trackerServlet</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>
   
</web-app>